{
	"frontend": {
		"title": "My website frontend",
		"image": "nginx",
		"ports": {
			"80/tcp": "${hostPort}"
		},
		"mounts": {
			"/usr/share/nginx/html:ro": "${repositoryDirectory}/${distDirName}"
		},
		"variables": {
			"repositoryDirectory": {
				"label": "Repository directory",
				"type": "directory",
				"value": null,
				"mandatory": true
			},
			"aFile": {
				"label": "A file",
				"type": "file",
				"value": null,
				"mandatory": false
			},
			"hostPort": {
				"label": "Host port",
				"type": "integer",
				"value": 8083,
				"mandatory": true
			},
			"distDirName": {
				"label": "Dist directory name",
				"type": "string",
				"value": null,
				"mandatory": true
			}
		}
	},
	"backend": {
		"title": "My website backend",
		"image": "iain/nodemon",
		"ports": {
			"8000/tcp": "8081"
		},
		"mounts": {
			"/home/project:ro": "${repositoryDirectory}"
		},
		"links": {
			"database": "database"
		},
		"cmd": "cd /home/project && nodemon dist 2>&1",
		"variables": {
			"repositoryDirectory": {
				"label": "Repository directory",
				"type": "directory",
				"value": null,
				"mandatory": true
			}
		}
	},
	"database": {
		"title": "The database",
		"image": "mongo",
		"ports": {
			"27017/tcp": "28018"
		},
		"cmd": "mongod --smallfiles"
	}
}
